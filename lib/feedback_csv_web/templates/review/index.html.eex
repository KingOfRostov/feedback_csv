<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto text-center d-flex justify-content-center">
            <%= form_for @changeset, Routes.review_path(@conn, :create), [multipart: true], fn f -> %>
                <div class="card">
                    <div class="card-header">
                        <h1 class=text-center>Отзывов в базе данных: <%= Kernel.length @reviews %> </h1> 
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <%= file_input f, :csv, class: "btn btn-light btn-lg" %>
                        </div>

                        <div class="form-group">
                            <%= submit "Добавить отзывы в БД", class: "btn btn-secondary" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

</div>